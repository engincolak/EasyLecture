@using EasyLectureModel.Model
@model StudentViewPresetModel

<h2>Edit Student</h2>

<form asp-action="Save" method="post">

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Student Id</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" value="@Model.Student.Id" readonly />
            <input type="hidden" name="Id" value="@Model.Student.Id" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input value="@Model.Student.Name" name="Name" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input value="@Model.Student.EMail" name="EMail" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input value="@Model.Student.Password" name="Password" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Role</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" value="Student" readonly />
            <input type="hidden" name="RoleId" value="@Model.Student.RoleId" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">
            lesson learned
        </label>
        <div class="col-sm-10">
            <div class="d-flex flex-wrap align-items-center">
                @foreach (var lecture in Model.Lecture)
                {
                    <div class="form-check mr-3 mb-2 d-flex align-items-center">
                        <input type="checkbox" class="form-check-input" id="lecture_@lecture.Id"
                               name="LectureIds"
                               value="@lecture.Id"
                        @(Model.Student.LectureIds.Contains(lecture.Id) ? "checked" : "") />
                        <label class="form-check-label ml-1" for="lecture_@lecture.Id">@lecture.Name</label>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>

</form>

<style>
    .form-group {
        margin-bottom: 1.5rem; /* Daha fazla boşluk için artırdım */
    }

    .form-check-label {
        margin-left: 0.5rem;
    }

    .form-check-input {
        margin-right: 0.5rem;
    }

    .form-control-plaintext {
        background-color: #f5f5f5;
        border: 1px solid #ced4da; /* Alanı daha belirgin hale getirmek için kenarlık ekledim */
        padding: 0.375rem 0.75rem;
    }

    .form-group.row label {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        font-weight: bold; /* Etiketlere biraz daha ağırlık eklemek için */
    }

    .d-flex.flex-wrap.align-items-center .form-check {
        margin-right: 15px; /* Checkbox'lar arası boşluk ekledim */
    }

    button.btn {
        padding: 0.5rem 2rem;
    }
</style>
