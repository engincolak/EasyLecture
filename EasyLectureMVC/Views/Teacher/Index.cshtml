@using EasyLectureModel.Model
@model TeacherViewResponseModel

@{
    ViewData["Title"] = "Teacher";
}

<h2>Teachers</h2>

<form action="/Teacher/EditTeacher" method="post">
    <button type="submit" class="button add-teacher-btn" value="0" name="id">Teacher Add</button>
</form>

<ul class="teacher-list">
    @if (Model?.Teacher != null)
    {
        foreach (var teacher in Model.Teacher)
        {
            if (!string.IsNullOrWhiteSpace(teacher.Name))
            {
                <li class="teacher-item">
                    <span class="teacher-name">@teacher.Name</span>
                    <div class="actions">
                        <form action="/teacher/editteacher" method="post" class="inline-form">
                            <input type="hidden" name="Id" value="@teacher.Id" />
                            <button type="submit" class="button edit-btn">Edit</button>
                        </form>
                        <form action="/Teacher/delete" method="post" class="inline-form">
                            <input type="hidden" name="Id" value="@teacher.Id" />
                            <button type="submit" class="button delete-btn">Delete</button>
                        </form>
                    </div>
                </li>
            }
        }
    }
    else
    {
        <li>No active teachers available.</li>
    }
</ul>

<style>
    /* Genel düzenlemeler */
    .teacher-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .teacher-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #ddd;
        padding: 10px 0;
    }

    .teacher-name {
        font-size: 16px;
        font-weight: bold;
    }

    .actions {
        display: flex;
        gap: 10px;
    }

    .inline-form {
        display: inline;
    }

    /* Buton stili */
    .button {
        padding: 6px 12px;
        font-size: 14px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .button:hover {
            background-color: #45a049;
        }

    .edit-btn {
        background-color: #008CBA;
    }

        .edit-btn:hover {
            background-color: #007bb5;
        }

    .delete-btn {
        background-color: #f44336;
    }

        .delete-btn:hover {
            background-color: #d32f2f;
        }

    .add-teacher-btn {
        background-color: #4CAF50;
        margin-bottom: 20px;
    }
</style>
