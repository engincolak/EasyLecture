@using EasyLectureModel.Model
@model TeacherViewModel

<h2>Edit Teacher</h2>

<form asp-action="Save" method="post">

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Teacher Id</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" value="@Model.Id" readonly />
            <input type="hidden" name="Id" value="@Model.Id" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input value="@Model.Name" name="Name" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input value="@Model.EMail" name="EMail" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input value="@Model.Password" name="Password" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Role</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" value="Teacher" readonly />
            <input type="hidden" name="RoleId" value="2" />
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>

</form>

<style>
    .form-group {
        margin-bottom: 1.5rem; /* Daha fazla boşluk için artırdım */
    }

    .form-check-label {
        margin-left: 0.5rem;
    }

    .form-check-input {
        margin-right: 0.5rem;
    }

    .form-control-plaintext {
        background-color: #f5f5f5;
        border: 1px solid #ced4da; /* Alanı daha belirgin hale getirmek için kenarlık ekledim */
        padding: 0.375rem 0.75rem;
    }

    .form-group.row label {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        font-weight: bold; /* Etiketlere biraz daha ağırlık eklemek için */
    }

    .d-flex.flex-wrap.align-items-center .form-check {
        margin-right: 15px; /* Checkbox'lar arası boşluk ekledim */
    }

    button.btn {
        padding: 0.5rem 2rem;
    }
</style>
